@using MovieSite.Data
@model Movie

<style>
    .movie-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 1rem;
    }

    .movie-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, 0.15);
    }

    .movie-card img {
        transition: opacity 0.3s ease;
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
        height: 250px;
        object-fit: cover;
        width: 100%;
    }

    .movie-card:hover img {
        opacity: 0.85;
    }

    .movie-title {
        font-size: 1.05rem;
        font-weight: 600;
        color: #212529;
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .movie-title:hover {
        color: #0d6efd;
    }

    .movie-meta {
        font-size: 0.9rem;
        color: #6c757d;
    }

    .movie-rating {
        font-size: 0.9rem;
        color: #ffc107;
        font-weight: 600;
    }
</style>

<div class="card border-0 shadow-sm movie-card h-100">
    <a asp-controller="Movie" asp-action="Details" asp-route-id="@Model.Id">
        <img src="~/img/@Model.ImageUrl" alt="@Model.Title" class="card-img-top">
    </a>

    <div class="card-body p-3">
        <div class="d-flex justify-content-between align-items-start mb-2">
            <a asp-controller="Movie" asp-action="Details" asp-route-id="@Model.Id" class="movie-title">
                @Model.Title
            </a>
            <span class="movie-rating">
                <i class="fa-solid fa-star"></i> @Model.Rating.ToString("0.0")
            </span>
        </div>

        <div class="movie-meta">
            <i class="fa-solid fa-film me-1"></i> @Model.Category?.Name
        </div>
    </div>
</div>
