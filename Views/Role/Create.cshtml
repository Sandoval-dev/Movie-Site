@model RoleCreateModel

@{
    ViewData["Title"] = "Create Role";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Add Role</h5>
                <a asp-action="Index" class="btn btn-sm btn-secondary" title="Back to List">
                    <i class="fa-solid fa-list"></i> Roles
                </a>
            </div>

            <div class="card-body">
                <form asp-action="Create" asp-controller="Role" method="post">
                    <div class="mb-3 row">
                        <label asp-for="RoleName" class="col-sm-2 col-form-label">Role Name</label>
                        <div class="col-sm-10">
                            <input asp-for="RoleName" class="form-control" />
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa-solid fa-floppy-disk"></i> Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
