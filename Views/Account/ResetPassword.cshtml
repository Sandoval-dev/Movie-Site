@model AccountResetPasswordModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<section class="mt-5">
    <div class="container" style="max-width: 480px;">
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-header bg-primary text-white text-center py-3">
                <h4 class="mb-0">Reset Your Password</h4>
            </div>
            <div class="card-body p-4">
                <form method="post" asp-controller="Account" asp-action="ResetPassword" novalidate>
                    <input type="hidden" asp-for="Token" />
                    <input type="hidden" asp-for="Email" />

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-semibold">New Password</label>
                        <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter new password" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ConfirmPassword" class="form-label fw-semibold">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Re-enter your password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg fw-bold">Reset Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
