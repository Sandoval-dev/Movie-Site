@using MovieSite.Data
@model Movie
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow border-0 mt-4">
            <div class="card-header bg-danger text-white text-center">
                <h5 class="mb-0">
                    <i class="fa-solid fa-triangle-exclamation me-2"></i>
                    Delete Movie
                </h5>
            </div>
            <div class="card-body text-center">
                <p class="fs-5 fw-semibold text-danger">
                    Are you sure you want to delete <strong>@Model.Title</strong>?
                </p>
                <form asp-controller="Movie" asp-action="DeleteConfirm" method="post">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mt-4">
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="fa-solid fa-trash me-1"></i> Yes, Delete
                        </button>
                        <a asp-controller="Movie" asp-action="Index" class="btn btn-secondary px-4">
                            <i class="fa-solid fa-ban me-1"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
